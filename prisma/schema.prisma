generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id                       String                     @id @default(cuid())
  name                     String?
  image                    String?
  email                    String?                    @unique
  emailVerified            DateTime?
  sessions                 Session[]
  accounts                 Account[]
  role                     UserRole                   @default(LOANEE)
  applications             Application[]
  password                 String?
  lender                   Lender?
  Notification             Notification[]
  ApplicationStatusHistory ApplicationStatusHistory[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Lender {
  id          String        @id @default(cuid())
  name        String
  business    String
  phone       String
  investment  String
  email       String
  province    String
  userId      String?       @unique
  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  approved    Boolean       @default(false)
  Application Application[]
}

model Application {
  id                       String                     @id @default(cuid())
  userId                   String
  loanType                 LoanType
  estimatedPropertyValue   Decimal?                   @db.Decimal(12, 2) // conditional
  houseType                PropertyType? // NEW ENUM
  downPayment              DownPayment? // NEW ENUM
  tradeInCurrentVehicle    Boolean? // for Car Loans
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  status                   LoanStatus                 @default(OPEN)
  hasBankruptcy            Boolean
  firstName                String
  lastName                 String
  previousAddress          String?
  currentAddress           String
  yearsAtCurrentAddress    Int
  housingStatus            HousingStatus
  housingPayment           Decimal                    @db.Decimal(10, 2) // 8 digits before decimal, 2 after
  dateOfBirth              DateTime
  maritalStatus            MaritalStatus
  residencyStatus          ResidencyStatus
  personalPhone            String
  personalEmail            String
  employmentStatus         EmploymentStatus
  grossIncome              Decimal                    @db.Decimal(12, 2) // 10 digits before decimal, 2 after
  workplaceName            String
  workplaceAddress         String
  workplacePhone           String
  workplaceEmail           String
  workplaceDuration        Int
  monthlyDebts             Decimal                    @db.Decimal(12, 2)
  savings                  Decimal                    @db.Decimal(12, 2)
  otherIncome              Boolean
  childCareBenefit         Boolean
  sin                      Int?
  hasCoApplicant           Boolean
  coApplicantFullName      String?
  coApplicantDateOfBirth   DateTime?
  coApplicantAddress       String?
  coApplicantPhone         String?
  coApplicantEmail         String?
  loanAmount               Decimal                    @db.Decimal(12, 2) // 10 digits before decimal, 2 after
  // Fields for general loans
  generalEducationLevel    EducationLevel?
  generalFieldOfStudy      String?
  // Related models
  documents                Document[]
  messages                 Message[]
  user                     User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  lenderId                 String?
  lender                   Lender?                    @relation(fields: [lenderId], references: [id])
  Notification             Notification[]
  ApplicationStatusHistory ApplicationStatusHistory[]

  @@index([userId])
  @@index([lenderId])
}

model Document {
  id            String         @id @default(cuid())
  application   Application    @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String
  documentType  DocumentType
  fileUrl       String?
  fileKey       String?
  fileType      String?
  fileName      String?
  uploadedAt    DateTime       @default(now())
  status        DocumentStatus @default(PENDING)
}

model Message {
  id            String      @id @default(cuid())
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String
  content       String
  senderId      String
  senderRole    UserRole
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum NotificationType {
  DOCUMENT_REQUEST
  DOCUMENT_SUBMITTED
}

model Notification {
  id            String           @id @default(cuid())
  userId        String
  applicationId String
  type          NotificationType @default(DOCUMENT_REQUEST)
  read          Boolean          @default(false)
  createdAt     DateTime         @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([applicationId])
  @@index([type])
}

model ApplicationStatusHistory {
  id            String      @id @default(cuid())
  applicationId String
  oldStatus     LoanStatus?
  newStatus     LoanStatus
  changedAt     DateTime    @default(now())
  changedById   String?
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  changedBy     User?       @relation(fields: [changedById], references: [id], onDelete: SetNull)

  @@index([applicationId])
  @@index([changedById])
}

enum UserRole {
  LOANEE @map("loanee")
  LENDER @map("lender")
  ADMIN  @map("admin")
}

enum ApplicationType {
  GENERAL  @map("general")
  MORTGAGE @map("mortgage")
}

enum HousingStatus {
  RENT @map("rent")
  OWN  @map("own")
}

enum ResidencyStatus {
  CITIZEN            @map("citizen")
  PERMANENT_RESIDENT @map("permanent_resident")
  WORK_PERMIT        @map("work_permit")
  STUDENT_VISA       @map("student_visa")
  OTHER              @map("other")
}

enum EmploymentStatus {
  FULL_TIME     @map("full_time")
  PART_TIME     @map("part_time")
  CONTRACT      @map("contract")
  SEASONAL      @map("seasonal")
  SELF_EMPLOYED @map("self_employed")
  OTHER         @map("other")
}

enum MortgagePurpose {
  BUYING     @map("buying")
  REPAIR     @map("repair")
  RENOVATION @map("renovation")
}

enum MortgageType {
  REFINE     @map("refine")
  EQUITY     @map("equity")
  BRIDGE     @map("bridge")
  FIRST_TIME @map("first_time")
}

enum MortgageHousingType {
  CONDO        @map("condo")
  APARTMENT    @map("apartment")
  DUPLEX       @map("duplex")
  TOWNHOUSE    @map("townhouse")
  DETACHED     @map("detached")
  SEMIDETACHED @map("semi_detached")
  CONTAINER    @map("container")
  MOBILE       @map("mobile")
  BUNGALOW     @map("bungalow")
  OTHER        @map("50")
}

enum LoanType {
  FIRST_TIME_HOME
  MORTGAGE_REFINANCE
  INVESTMENT_PROPERTY
  HELOC
  HOME_REPAIR
  COMMERCIAL
  CAR
  PERSONAL
  LINE_OF_CREDIT
  BUSINESS
  OTHER
}

enum PropertyType {
  CONDO
  APARTMENT
  DUPLEX
  TOWNHOUSE
  DETACHED
  SEMI_DETACHED
  HOUSE
  CONTAINER
  MOBILE
  BUNGALOW
  OTHER
}

enum LoanStatus {
  OPEN
  ASSIGNED_TO_LENDER
  IN_PROGRESS
  IN_CHAT
  APPROVED
  REJECTED
  ARCHIVED
}

enum DocumentType {
  IDENTITY_PROOF    @map("identity_proof")
  INCOME_PROOF      @map("income_proof")
  EMPLOYMENT_LETTER @map("employment_letter")
  TAX_RETURN        @map("tax_return")
  BANK_STATEMENT    @map("bank_statement")
  PROPERTY_DOCUMENT @map("property_document")
  OTHER             @map("other")
}

enum DocumentStatus {
  PENDING  @map("pending") // document not uploaded by loanee
  UPLOADED @map("uploaded") // document uploaded by loanee
  APPROVED @map("approved") // document approved by admin
  REJECTED @map("rejected") // document rejected by admin
}

enum MaritalStatus {
  SINGLE   @map("single")
  MARRIED  @map("married")
  DIVORCED @map("divorced")
  WIDOWED  @map("widowed")
  OTHER    @map("other")
}

enum EducationLevel {
  HIGH_SCHOOL   @map("high_school")
  COLLEGE       @map("college")
  UNIVERSITY    @map("university")
  POST_GRADUATE @map("post_graduate")
  OTHER         @map("other")
}

enum MortgageDownPayment {
  FIVE    @map("5")
  TEN     @map("10")
  FIFTEEN @map("15")
  TWENTY  @map("20")
  MORE    @map("more")
}

enum DownPayment {
  FIVE    @map("5")
  TEN     @map("10")
  FIFTEEN @map("15")
  TWENTY  @map("20")
  MORE    @map("more")
}
