generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String                     @id @default(cuid())
  name                     String?
  image                    String?
  email                    String?                    @unique
  emailVerified            DateTime?
  role                     UserRole                   @default(LOANEE)
  password                 String?
  accounts                 Account[]
  applications             Application[]
  ApplicationStatusHistory ApplicationStatusHistory[]
  lender                   Lender?
  agent                    Agent?
  Notification             Notification[]
  sessions                 Session[]
  stripeCustomerId         String?
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt @default(now())
  freeTierEndsAt           DateTime?
  subscriptions            Subscription[]
  agentReviews AgentReview[]   @relation("UserAgentReviews")
  hasSeenFreeTrialModal Boolean  @default(false)

  advisorId     String?
  advisor       Agent?      @relation("UserAdvisor", fields: [advisorId], references: [id])

  sentAdvisorMessages     AdvisorMessage[] @relation("SentAdvisorMessages")
  receivedAdvisorMessages AdvisorMessage[] @relation("ReceivedAdvisorMessages")
}

model Subscription {
  id                   String              @id @default(cuid())
  userId               String
  role                 UserRole
  plan                 SubscriptionPlan
  billingInterval      BillingInterval
  status               SubscriptionStatus @default(ACTIVE)

  stripeSubscriptionId String?             @unique
  stripePriceId        String?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean             @default(false)
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt

  user                 User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([role])
  @@index([plan])
}


enum SubscriptionPlan {
  LOANEE_FREE
  LOANEE_STAY_SMART
  LENDER_TRIAL
  LENDER_SIMPLE
  LENDER_STANDARD
}

enum BillingInterval {
  MONTHLY
  YEARLY
  NONE
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  INCOMPLETE_EXPIRED
  UNPAID
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Lender {
  id          String        @id @default(cuid())
  name        String
  business    String
  phone       String
  investment  String
  email       String
  province    String
  userId      String?       @unique
  approved    Boolean       @default(false)
  Application Application[]
  user        User?         @relation(fields: [userId], references: [id])
}

model Agent {
  id        String   @id @default(cuid())
  userId    String?  @unique
  name      String
  phone     String
  email     String
  business  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agentCode String?   @unique
  calendlyUrl String?

  reviews AgentReview[]
  agentApplicationUnlocks AgentApplicationUnlock[]


  user         User?         @relation(fields: [userId], references: [id])
  applications Application[]

  @@index([userId])

  users         User[]      @relation("UserAdvisor")
}


model AgentReview {
  id            String   @id @default(cuid())
  rating        Int
  comment       String?
  createdAt     DateTime @default(now())

  agentId       String
  loaneeId      String
  applicationId String

  agent         Agent       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  loanee        User        @relation("UserAgentReviews", fields: [loaneeId], references: [id], onDelete: Cascade)
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@unique([applicationId])
  @@index([agentId])
}


model AgentApplicationUnlock {
  id            String   @id @default(cuid())
  applicationId String
  agentId       String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  agent       Agent       @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@unique([applicationId, agentId])
  @@index([agentId])
  @@index([applicationId])
}


model Application {
  id                     String           @id @default(cuid())
  userId                 String
  loanType               LoanType
  estimatedPropertyValue Decimal?         @db.Decimal(12, 2)
  houseType              PropertyType?
  downPayment            DownPayment?
  tradeInCurrentVehicle  Boolean?
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  status                 LoanStatus       @default(OPEN)
  hasBankruptcy          Boolean
  firstName              String
  lastName               String
  previousAddress        String?
  currentAddress         String
  yearsAtCurrentAddress  Int
  housingStatus          HousingStatus
  housingPayment         Decimal          @db.Decimal(10, 2)
  creditScore            Int?
  dateOfBirth            DateTime
  maritalStatus          MaritalStatus
  residencyStatus        ResidencyStatus
  personalPhone          String
  personalEmail          String
  vehicleType            VehicleType?
  employmentStatus       EmploymentStatus
  grossIncome            Decimal          @db.Decimal(12, 2)
  workplaceName          String
  workplaceAddress       String
  workplacePhone         String
  workplaceEmail         String
  workplaceDuration      Int
  monthlyDebts           Decimal          @db.Decimal(12, 2)
  savings                Decimal          @db.Decimal(12, 2)
  otherIncome            Boolean
  otherIncomeAmount      Decimal?         @db.Decimal(12, 2)
  childCareBenefit       Boolean
  sin                    Int?
  hasCoApplicant         Boolean
  coApplicantFullName    String?
  coApplicantDateOfBirth DateTime?
  coApplicantAddress     String?
  coApplicantPhone       String?
  coApplicantEmail       String?
  loanAmount             Decimal          @db.Decimal(12, 2)
  generalEducationLevel  EducationLevel?
  generalFieldOfStudy    String?
  lenderId               String?
  lender                 Lender?          @relation(fields: [lenderId], references: [id])
  agentId                String? // nullable FK
  agent                  Agent?           @relation(fields: [agentId], references: [id])


  agentReviews AgentReview[]
  agentApplicationUnlocks AgentApplicationUnlock[]


  user                     User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  potentialLender          PotentialLender[]
  matchLender              MatchLendertoLoanee[]
  ApplicationStatusHistory ApplicationStatusHistory[]
  documents                Document[]
  messages                 Message[]
  Notification             Notification[]

  agentCode String?

  prequalStatus         PrequalStatus?
  prequalLabel          String?
  prequalCreditTier     CreditTier?

  prequalDti            Decimal?           @db.Decimal(6, 2)
  prequalTdsr           Decimal?           @db.Decimal(6, 2)
  prequalLti            Decimal?           @db.Decimal(6, 2)
  prequalLtv            Decimal?           @db.Decimal(6, 2)

  prequalPayment        Decimal?           @db.Decimal(12, 2)
  prequalRoomMonthly    Decimal?           @db.Decimal(12, 2)
  prequalMortMin        Decimal?           @db.Decimal(14, 2)
  prequalMortMax        Decimal?           @db.Decimal(14, 2)

  prequalExplanation    String?
  prequalSnapshot       Json?

  @@index([userId])
  @@index([lenderId])
  @@index([agentId])
}

model PotentialLender {
  id            String   @id @default(cuid())
  applicationId String
  lenderId      String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
  @@index([lenderId])
}

model MatchLendertoLoanee {
  id            String   @id @default(cuid())
  applicationId String
  lenderId      String
  createdAt         DateTime @default(now())
  loaneeShortlisted Boolean  @default(false)

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
  @@index([lenderId])
}

model Document {
  id            String         @id @default(cuid())
  applicationId String
  documentType  DocumentType
  fileUrl       String?
  fileKey       String?
  fileType      String?
  fileName      String?
  uploadedAt    DateTime       @default(now())
  status        DocumentStatus @default(PENDING)
  application   Application    @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

model Message {
  id            String      @id @default(cuid())
  applicationId String
  content       String
  senderId      String
  senderRole    UserRole
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

model Notification {
  id            String           @id @default(cuid())
  userId        String
  applicationId String
  type          NotificationType @default(DOCUMENT_REQUEST)
  read          Boolean          @default(false)
  createdAt     DateTime         @default(now())
  application   Application      @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([applicationId])
  @@index([type])
}

model ApplicationStatusHistory {
  id            String      @id @default(cuid())
  applicationId String
  oldStatus     LoanStatus?
  newStatus     LoanStatus
  changedAt     DateTime    @default(now())
  changedById   String?
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  changedBy     User?       @relation(fields: [changedById], references: [id])

  @@index([applicationId])
  @@index([changedById])
}

enum NotificationType {
  DOCUMENT_REQUEST
  DOCUMENT_SUBMITTED
}

enum UserRole {
  LOANEE @map("loanee")
  LENDER @map("lender")
  ADMIN  @map("admin")
  AGENT  @map("agent")
}

enum ApplicationType {
  GENERAL  @map("general")
  MORTGAGE @map("mortgage")
}

enum HousingStatus {
  RENT @map("rent")
  OWN  @map("own")
}

enum VehicleType {
  CAR
  TRUCK
  SUV
  VAN
  SEDAN
  MINIVAN
  OTHER
}

enum ResidencyStatus {
  CITIZEN            @map("citizen")
  PERMANENT_RESIDENT @map("permanent_resident")
  WORK_PERMIT        @map("work_permit")
  STUDENT_VISA       @map("student_visa")
  OTHER              @map("other")
  REFUGEE            @map("refugee")
}

enum EmploymentStatus {
  FULL_TIME     @map("full_time")
  PART_TIME     @map("part_time")
  CONTRACT      @map("contract")
  SEASONAL      @map("seasonal")
  SELF_EMPLOYED @map("self_employed")
  OTHER         @map("other")
}

enum MortgagePurpose {
  BUYING     @map("buying")
  REPAIR     @map("repair")
  RENOVATION @map("renovation")
}

enum MortgageType {
  REFINE     @map("refine")
  EQUITY     @map("equity")
  BRIDGE     @map("bridge")
  FIRST_TIME @map("first_time")
}

enum MortgageHousingType {
  CONDO        @map("condo")
  APARTMENT    @map("apartment")
  DUPLEX       @map("duplex")
  TOWNHOUSE    @map("townhouse")
  DETACHED     @map("detached")
  SEMIDETACHED @map("semi_detached")
  CONTAINER    @map("container")
  MOBILE       @map("mobile")
  BUNGALOW     @map("bungalow")
  OTHER        @map("50")
}

enum LoanType {
  FIRST_TIME_HOME
  MORTGAGE_REFINANCE
  INVESTMENT_PROPERTY
  HELOC
  HOME_REPAIR
  COMMERCIAL
  CAR
  PERSONAL
  LINE_OF_CREDIT
  BUSINESS
  OTHER
}

enum PropertyType {
  CONDO
  APARTMENT
  DUPLEX
  TOWNHOUSE
  DETACHED
  SEMI_DETACHED
  HOUSE
  CONTAINER
  MOBILE
  BUNGALOW
  OTHER
}

enum LoanStatus {
  OPEN
  ASSIGNED_TO_LENDER
  ASSIGNED_TO_POTENTIAL_LENDER
  IN_PROGRESS
  IN_CHAT
  APPROVED
  REJECTED
  ARCHIVED
}

enum DocumentType {
  IDENTITY_PROOF    @map("identity_proof")
  INCOME_PROOF      @map("income_proof")
  EMPLOYMENT_LETTER @map("employment_letter")
  TAX_RETURN        @map("tax_return")
  BANK_STATEMENT    @map("bank_statement")
  PROPERTY_DOCUMENT @map("property_document")
  OTHER             @map("other")
}

enum DocumentStatus {
  PENDING  @map("pending")
  UPLOADED @map("uploaded")
  APPROVED @map("approved")
  REJECTED @map("rejected")
}

enum MaritalStatus {
  SINGLE   @map("single")
  MARRIED  @map("married")
  DIVORCED @map("divorced")
  WIDOWED  @map("widowed")
  OTHER    @map("other")
}

enum EducationLevel {
  HIGH_SCHOOL   @map("high_school")
  COLLEGE       @map("college")
  UNIVERSITY    @map("university")
  POST_GRADUATE @map("post_graduate")
  OTHER         @map("other")
}

enum MortgageDownPayment {
  FIVE    @map("5")
  TEN     @map("10")
  FIFTEEN @map("15")
  TWENTY  @map("20")
  MORE    @map("more")
}

enum DownPayment {
  FIVE    @map("5")
  TEN     @map("10")
  FIFTEEN @map("15")
  TWENTY  @map("20")
  MORE    @map("more")
}

enum PrequalStatus {
  APPROVED
  CONDITIONAL
  DECLINED
}

enum CreditTier {
  EXCELLENT
  GOOD
  FAIR
  POOR
}

model AdvisorMessage {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  sender    User     @relation("SentAdvisorMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver  User     @relation("ReceivedAdvisorMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
}
